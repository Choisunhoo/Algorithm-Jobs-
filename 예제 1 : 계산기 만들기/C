// 예제 1 : 계산기 만들기
#include <stdio.h>
int main(){
    // a, b 변수값을 정수형으로 저장
    int a, b; 
    // 숫자 a 와 b를 입력할 수 있도록 만듬
    scanf("%d %d",&a, &b);

    // a,b 의 사칙연산과 나머지를 구해주는 내용을 출력, 나누기만 실수형으로 바꿔줌
    printf("%d + %d : %d\n",a, b, a+b);
    printf("%d - %d : %d\n",a, b, a-b);
    printf("%d * %d : %d\n",a, b, a*b);
    printf("%d / %d : %lf\n",a, b, (double)a/b);
    printf("%d %% %d : %d\n",a, b, a%b);

    return 0;
}
